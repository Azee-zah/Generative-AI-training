from pathlib import Path


workspace = Path("workspace_files")    #create folder
workspace.mkdir(exist_ok=True)
file_path = workspace / "notes.txt"
file_path

#create file : write w and exclusive create x
f = open(file_path, "w", encoding="utf-8")
f.write("This is the first line in notes.txt\n")
f.close

# f = open(workspace / "created_once.txt", "x", encoding="utf-8")
# f.write("This file will only be created if it doesn't exist.\n")
# f.close


# to open a file
f = open(file_path, "w", encoding="utf-8")
f.write("This is just a practical note\n")
f.close

#to write contents in the file, use \n for moving to new lines
f = open(file_path, "w", encoding="utf-8")
f.write("Shopping List:\n")
f.write(" - Rice\n")
f.write(" - Beans\n")
f.write(" - Garri\n")
f.close

#to append to a file
f = open(file_path, "a", encoding="utf-8")
f.write(" - Groundnut oil\n")
f.write(" - Maggi\n")
f.close

#to read a file
f = open(file_path, "r", encoding="utf-8")
content = f.read()              #reads the whole of the file
f.close()
print(content)

f = open(file_path, "r", encoding="utf-8")
print("First Line:", f.readline().rstrip())   #reading line by line
print("Second Line:", f.readline().rstrip())
f.close

f = open(file_path, "r", encoding="utf-8")
Lines = f.readlines()            #read all the lines as a list
f.close()
print(Lines)
print("Lines list:", [line.rstrip() for line in Lines])

f = open(file_path, "r", encoding="utf-8")
for lines in f:
    print("->", lines.rstrip())                       #iterating over lines
f.close()

# better way to close an open file 
with open (file_path, "w", encoding="utf-8") as f:
    f.write("My To-do list:\n")
    f.write(" - Revise Python file handling\n")
    f.write(" - Practice error handling within a function\n")
    f.write("- Practice JSON & CSV\n")


with open(file_path, "a", encoding="utf-8") as f:
    f.write("- Build a small project\n")     # can append with this method too


